@model IEnumerable<ECommerceMVC.ViewModels.HangHoaVM>
@{
    ViewData["Title"] = "Shop";
    Layout = "_DanhSachHangHoa";
}

@section BreadCum {
    <div class="container-fluid page-header py-5">
        <h1 class="text-center text-white display-6">Shop</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Pages</a></li>
            <li class="breadcrumb-item active text-white">Shop</li>
        </ol>
    </div>
}

@section FeaturedProducts {
    @if (Model != null && Model.Any())
    {
        @foreach (var featured in Model.Take(3))
        {
            <div class="d-flex align-items-center justify-content-start mb-3">
                <div class="rounded me-4" style="width: 100px; height: 100px;">
                    <a asp-controller="HangHoa" asp-action="Detail" asp-route-id="@featured.MaHh">
                        <img src="~/Hinh/HangHoa/@featured.Hinh" class="img-fluid rounded" alt="@featured.TenHH" style="width: 100px; height: 100px; object-fit: cover;">
                    </a>
                </div>
                <div>
                    <h6 class="mb-2">
                        <a asp-controller="HangHoa" asp-action="Detail" asp-route-id="@featured.MaHh" class="text-dark text-decoration-none">
                            @featured.TenHH
                        </a>
                    </h6>
                    <div class="d-flex mb-2">
                        <i class="fa fa-star text-secondary"></i>
                        <i class="fa fa-star text-secondary"></i>
                        <i class="fa fa-star text-secondary"></i>
                        <i class="fa fa-star text-secondary"></i>
                        <i class="fa fa-star"></i>
                    </div>
                    <div class="d-flex mb-2">
                        <h5 class="fw-bold me-2 text-primary">@featured.DonGia.ToString("N0") ₫</h5>
                    </div>
                </div>
            </div>
        }
    }
}

<!-- DANH SÁCH SẢN PHẨM -->
@if (Model != null && Model.Any())
{
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4">
            <div class="rounded position-relative fruite-item h-100">
                <div class="fruite-img">
                    <a asp-controller="HangHoa" asp-action="Detail" asp-route-id="@item.MaHh">
                        <img src="~/Hinh/HangHoa/@item.Hinh"
                             class="img-fluid w-100 rounded-top"
                             alt="@item.TenHH"
                             style="height: 250px; object-fit: cover;"
                             loading="lazy"
                             onerror="this.src='/img/no-image.jpg'">
                    </a>
                </div>
                <div class="text-white bg-warning px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">
                    @item.TenLoai
                </div>
                <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                    <h4 class="mb-2">
                        <a asp-controller="HangHoa" asp-action="Detail" asp-route-id="@item.MaHh"
                           class="text-dark text-decoration-none"
                           title="@item.TenHH">
                            @(item.TenHH.Length > 30 ? item.TenHH.Substring(0, 30) + "..." : item.TenHH)
                        </a>
                    </h4>
                    <p class="text-muted small mb-3" style="min-height: 40px;">
                        @(string.IsNullOrEmpty(item.MoTaNgan) ? "Sản phẩm chất lượng cao" : (item.MoTaNgan.Length > 50 ? item.MoTaNgan.Substring(0, 50) + "..." : item.MoTaNgan))
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <p class="text-danger fs-5 fw-bold mb-0">@item.DonGia.ToString("N0") ₫</p>
                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.MaHh"
                           class="btn border border-secondary rounded-pill px-3 text-primary"
                           title="Thêm vào giỏ hàng">
                            <i class="fa fa-shopping-bag me-2 text-primary"></i> Mua
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="col-12">
        <div class="alert alert-info text-center p-5" role="alert">
            <i class="fa fa-info-circle fa-3x mb-3 text-info"></i>
            <h4>Không tìm thấy sản phẩm nào!</h4>
            <p class="mb-3">Vui lòng thử tìm kiếm với từ khóa khác hoặc xem tất cả sản phẩm.</p>
            <a asp-controller="HangHoa" asp-action="Index" class="btn btn-primary rounded-pill px-4">
                <i class="fa fa-home me-2"></i> Xem tất cả sản phẩm
            </a>
        </div>
    </div>
}

<!-- Pagination -->
@if (Model != null && Model.Any())
{
    <div class="col-12">
        <div class="pagination d-flex justify-content-center mt-5">
            <a href="?page=1" class="rounded">&laquo;</a>
            <a href="?page=1" class="active rounded">1</a>
            <a href="?page=2" class="rounded">2</a>
            <a href="?page=3" class="rounded">3</a>
            <a href="?page=4" class="rounded">4</a>
            <a href="?page=5" class="rounded">5</a>
            <a href="?page=6" class="rounded">6</a>
            <a href="?page=6" class="rounded">&raquo;</a>
        </div>
    </div>
}