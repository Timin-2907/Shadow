@model IEnumerable<ECommerceMVC.ViewModels.OrderHistory>

@{
    ViewData["Title"] = "Lịch sử đơn hàng";
}

<div class="container mt-5">
    <h2>Lịch sử đơn hàng</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Mã ĐH</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th>Thanh toán</th>
                    <th>Trạng thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>#@order.MaHD</td>
                        <td>@order.NgayDat.ToString("dd/MM/yyyy")</td>
                        <td>@order.TongTien.ToString("N0") ₫</td>
                        <td>@order.PhuongThucThanhToan</td>
                        <td>@order.TrangThai</td>
                        <td>
                            <a asp-action="OrderDetail" asp-route-id="@order.MaHD" class="btn btn-sm btn-primary">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Bạn chưa có đơn hàng nào</p>
    }
</div>