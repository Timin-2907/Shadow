<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - ECommerceMVC</title>

    <!-- Default Meta Tags -->
    <meta name="description" content="Mua sắm giày dép chính hãng, giá tốt nhất">
    <meta name="keywords" content="giày, giày thể thao, mua giày online">

    <!-- SEO Meta Tags từ View -->
    @await RenderSectionAsync("MetaTags", required: false)

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Bootstrap + Custom CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">

    <!-- CSS Override - Đổi TẤT CẢ màu xanh lá thành xanh biển -->
    <style>
        /* Đổi thanh top bar thành màu xanh biển */
        .topbar.bg-primary {
            background: linear-gradient(135deg, #1e88e5 0%, #1565c0 100%) !important;
        }

        /* Đổi màu text-primary và các nút */
        .text-primary,
        h1.text-primary,
        h2.text-primary,
        h3.text-primary,
        h4.text-primary,
        h5.text-primary,
        h6.text-primary,
        a.text-primary,
        span.text-primary,
        p.text-primary {
            color: #1e88e5 !important;
        }

        /* Đổi màu tất cả các nút primary */
        .btn-primary,
        .bg-primary,
        button.btn-primary,
        a.btn-primary,
        input.btn-primary {
            background: linear-gradient(135deg, #1e88e5 0%, #1565c0 100%) !important;
            background-color: #1e88e5 !important;
            border-color: #1565c0 !important;
            color: white !important;
        }

            .btn-primary:hover,
            .btn-primary:focus,
            .btn-primary:active {
                background: linear-gradient(135deg, #1565c0 0%, #0d47a1 100%) !important;
                background-color: #1565c0 !important;
                border-color: #0d47a1 !important;
            }

        /* Đổi màu spinner */
        .spinner-grow.text-primary {
            color: #1e88e5 !important;
        }

        /* Đổi màu tất cả icon có màu xanh lá */
        .fas.fa-search.text-primary,
        .fa-shopping-bag,
        .bi-cart,
        i.text-primary {
            color: #1e88e5 !important;
        }

        /* Đổi màu border-primary */
        .border-primary {
            border-color: #1565c0 !important;
        }

        /* Đổi màu back to top button */
        .back-to-top {
            background: linear-gradient(135deg, #1e88e5 0%, #1565c0 100%) !important;
        }

        /* Đổi màu badge giỏ hàng */
        .badge,
        .badge-primary,
        span.badge {
            background-color: #1e88e5 !important;
            color: white !important;
        }

        /* Đổi màu highlight, active states */
        .nav-link.active,
        .active {
            color: #1e88e5 !important;
        }

        /* Đổi màu hover effects */
        a:hover,
        .nav-link:hover {
            color: #1565c0 !important;
        }

        /* Đổi màu các thành phần form focus */
        .form-control:focus,
        input:focus,
        textarea:focus,
        select:focus {
            border-color: #1e88e5 !important;
            box-shadow: 0 0 0 0.2rem rgba(30, 136, 229, 0.25) !important;
        }

        /* Đổi màu pagination */
        .page-link,
        .pagination .active .page-link {
            color: #1e88e5 !important;
            background-color: rgba(30, 136, 229, 0.1) !important;
            border-color: #1e88e5 !important;
        }

        /* Đổi màu progress bar */
        .progress-bar {
            background-color: #1e88e5 !important;
        }

        /* Đổi màu alert primary */
        .alert-primary {
            background-color: rgba(30, 136, 229, 0.1) !important;
            border-color: #1e88e5 !important;
            color: #0d47a1 !important;
        }

        /* Đổi màu card header */
        .card-header.bg-primary {
            background: linear-gradient(135deg, #1e88e5 0%, #1565c0 100%) !important;
        }

        /* Đổi màu dropdown active */
        .dropdown-item.active,
        .dropdown-item:active {
            background-color: #1e88e5 !important;
        }

        /* Đổi màu list group */
        .list-group-item.active {
            background-color: #1e88e5 !important;
            border-color: #1565c0 !important;
        }

        /* Đổi màu icon user */
        .fa-user,
        .fas.fa-user,
        i.fa-user {
            color: #1e88e5 !important;
        }

        /* Đổi tất cả icon fontawesome màu xanh */
        .fa, .fas, .far, .fal, .fab {
            color: inherit;
        }

        /* Override màu các icon cụ thể */
        a .fa-user,
        a .fas.fa-user,
        .my-auto .fa-user {
            color: #1e88e5 !important;
        }

        /* Đổi màu SVG và path nếu dùng SVG icon */
        svg[fill*="#81d34c"],
        path[fill*="#81d34c"],
        svg[fill*="rgb(129, 211, 76)"],
        path[fill*="rgb(129, 211, 76)"] {
            fill: #1e88e5 !important;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->
    <!-- Header + Navbar -->
    <div class="container-fluid fixed-top">
        <div class="container topbar bg-primary d-none d-lg-block">
            <div class="d-flex justify-content-between">
                <div class="top-info ps-2">
                    <small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">123 Street, New York</a></small>
                    <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">Email@Example.com</a></small>
                </div>
                <div class="top-link pe-2">
                    <a href="#" class="text-white"><small class="text-white mx-2">Privacy Policy</small>/</a>
                    <a href="#" class="text-white"><small class="text-white mx-2">Terms of Use</small>/</a>
                    <a href="#" class="text-white"><small class="text-white ms-2">Sales and Refunds</small></a>
                </div>
            </div>
        </div>

        <div class="container px-0">
            <nav class="navbar navbar-light bg-white navbar-expand-xl">
                <a asp-action="Index" asp-controller="Home" class="navbar-brand"><h1 class="text-primary display-6">Shoe</h1></a>
                <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars text-primary"></span>
                </button>
                <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                    <div class="navbar-nav mx-auto">
                        <a asp-action="Index" asp-controller="Home" class="nav-item nav-link active">Home</a>
                        <a asp-controller="HangHoa" asp-action="Index" class="nav-item nav-link">Shop</a>

                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Member</a>
                            <div class="dropdown-menu m-0 bg-secondary rounded-0">
                                <a asp-controller="Cart" asp-action="Index" class="dropdown-item">Cart</a>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a asp-controller="KhachHang" asp-action="Profile" class="dropdown-item">Profile</a>
                                    <a asp-controller="KhachHang" asp-action="DangXuat" class="dropdown-item">Logout</a>
                                }
                                else
                                {
                                    <a asp-controller="KhachHang" asp-action="DangKy" class="dropdown-item">Đăng ký</a>
                                    <a asp-controller="KhachHang" asp-action="DangNhap" class="dropdown-item">Đăng nhập</a>
                                    <a asp-controller="KhachHang" asp-action="QuenMatKhau" class="dropdown-item">Quên mật khẩu</a>
                                }
                            </div>
                        </div>
                        <a href="contact.html" class="nav-item nav-link">Contact</a>
                    </div>

                    <div class="d-flex m-3 me-0">
                        <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="fas fa-search text-primary"></i></button>

                        @await Component.InvokeAsync("Cart")

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="KhachHang" asp-action="Profile" class="my-auto" title="Xem thông tin người dùng">
                                <i class="fas fa-user fa-2x"></i>
                            </a>
                        }
                        else
                        {
                            <a asp-controller="KhachHang" asp-action="DangNhap" class="my-auto" title="Đăng nhập nha">
                                <i class="fas fa-user fa-2x"></i>
                            </a>
                        }
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <!-- Search Modal -->
    <div class="modal fade" id="searchModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content rounded-0">
                <div class="modal-header">
                    <h5 class="modal-title">Search by keyword</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body d-flex align-items-center">
                    <div class="input-group w-75 mx-auto">
                        <input id="searchText" type="search" class="form-control p-3" placeholder="keywords">
                        <span id="seachButton" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div style="min-height:400px;" class="hero-header">
        @RenderBody()
    </div>

    @await Html.PartialAsync("_Footer")
    @await Html.PartialAsync("_Copyright")

    <!-- Back to top -->
    <a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>

    <!-- JS Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/js/main.js"></script>

    @RenderSection("Scripts", required: false)

    <script>
        $(document).ready(function () {
            $("#seachButton").click(function () {
                let url = `/HangHoa/Search?query=` + $("#searchText").val();
                window.location.href = url;
            });
        });
    </script>
